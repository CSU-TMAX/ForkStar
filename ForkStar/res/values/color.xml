<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="list_item_title">#fff</color>
    <color name="list_background">#303030</color>
    <color name="list_background_pressed">#992416</color>
    <color name="list_divider">#272727</color>
    <color name="counter_text_bg">#626262</color>
    <color name="counter_text_color">#c5c4c4</color>

    <!-- AutoCompleteTextView Background -->
    <color name="compatibility_white">#fff3f3f3</color>

    <!-- SmoothProgressBar -->
    <color name="default_progress_bar_color">#FF33B5E5</color>

    <!-- CustomActionBar -->
    <color name="actionbar_background_default">#F6F6F6</color>
    <color name="actionbar_background_start">#F8f8f8</color>
    <color name="actionbar_background_end">#F3F3F3</color>

    <!-- List item -->
    <color name="list_item_background_default">#FFFFFF</color>
    <color name="list_item_background_start">#F2F2F2</color>
    <color name="list_item_background_end">#F2F2F2</color>

    <!-- Dark -->
    <color name="dark_hit">#111111</color>
    <color name="dark_default">#333333</color>
    <color name="dark_general">#666666</color>

    <!-- SuperToasts -->
    <color name="black">#000000</color>
    <color name="white">#FFFFFF</color>
    <color name="dark_gray">#333333</color>
    <color name="light_gray">#AFFFFFFF</color>

    <!-- WebView Background -->
    <color name="github">#f8f8f8</color>
    <color name="monokai">#272822</color>
    <color name="solarized">#002b36</color>
    <color name="sunburst">#000000</color>
    <color name="tomorrow">#ffffff</color>

    <!-- SmoothProgressBar -->
    <style name="Theme.SmoothProgressBarDefaults" parent="android:Theme">
        <item name="spbStyle">@style/SmoothProgressBar</item>
    </style>
    <!-- SmoothProgressBar -->
    <style name="SmoothProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="spb_color">@color/spb_default_color</item>
        <item name="spb_sections_count">@integer/spb_default_sections_count</item>
        <item name="spb_speed">@string/spb_default_speed</item>
        <item name="spb_stroke_width">@dimen/spb_default_stroke_width</item>
        <item name="spb_stroke_separator_length">@dimen/spb_default_stroke_separator_length</item>
        <item name="spb_reversed">@bool/spb_default_reversed</item>
        <item name="spb_mirror_mode">@bool/spb_default_mirror_mode</item>
        <item name="spb_progressiveStart_activated">@bool/spb_default_progressiveStart_activated</item>
        <item name="spb_background">@null</item>
        <item name="spb_generate_background_with_colors">false</item>
        <item name="spb_gradients">false</item>
    </style>

    <!-- SuperToasts -->
    <style name="DefaultText">
        <item name="android:text">Default</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    <!-- SuperToasts -->
    <style name="DefaultRootLayout">
        <item name="android:background">@drawable/background_standard_gray</item>
    </style>
    <!-- Styles for BUTTON type SuperActivityToasts -->
    <style name="SuperActivityToast_Button_RootLayout" parent="DefaultRootLayout">
        <item name="android:layout_marginBottom">@dimen/buttontoast_hover</item>
        <item name="android:layout_marginLeft">@dimen/buttontoast_x_padding</item>
        <item name="android:layout_marginRight">@dimen/buttontoast_x_padding</item>
    </style>

    <style name="SuperActivityToast_Button_TextView" parent="DefaultText">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="SuperActivityToast_Button_Divider">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="SuperActivityToast_Button_Button">
        <item name="android:background">@drawable/selector_undobutton</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>
    <!-- Styles for PROGRESS type SuperActivityToasts -->
    <style name="SuperActivityToast_Progress_ProgressBar" parent="android:Widget.Holo.ProgressBar">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="SuperActivityToast_Progress_TextView" parent="DefaultText">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- Styles for PROGRESS_HORIZONTAL type SuperActivityToasts -->
    <style name="SuperActivityToast_ProgressHorizontal_RootLayout" parent="DefaultRootLayout">
        <item name="android:minWidth">128dp</item>
    </style>

    <style name="SuperActivityToast_ProgressHorizontal_TextView" parent="DefaultText">
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="SuperActivityToast_ProgressHorizontal_ProgressBar" parent="android:Widget.Holo.ProgressBar.Horizontal">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <!-- Styles for BUTTON type SuperCardToasts -->
    <style name="SuperCardToast_Button_RootLayout" parent="DefaultRootLayout">
        <item name="android:background">@drawable/selector_undobutton</item>
    </style>

</resources>