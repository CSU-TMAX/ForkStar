<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:descendantFocusability="blocksDescendants">

        <ImageButton android:id="@+id/repo_item_overflow"
                     android:contentDescription="@string/repo_item_overflow"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:layout_centerVertical="true"
                     android:paddingRight="5dp"
                     android:paddingTop="20dp"
                     android:paddingBottom="20dp"
                     android:src="@drawable/general_item_overflow"
                     android:background="@android:color/transparent">
        </ImageButton>

        <LinearLayout android:id="@+id/repo_linear_layout"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_alignParentLeft="true"
                      android:layout_toLeftOf="@id/repo_item_overflow">

            <ImageView android:id="@+id/repo_item_icon"
                       android:contentDescription="@string/repo_item_icon"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingTop="13dp"
                       android:paddingLeft="10dp">
            </ImageView>

            <LinearLayout android:orientation="vertical"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:paddingTop="10dp"
                          android:paddingBottom="10dp"
                          android:paddingLeft="10dp"
                          android:paddingRight="5dp">

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                    <TextView android:id="@+id/repo_item_date"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_alignParentRight="true"
                              android:textSize="12sp"
                              android:textColor="@color/dark_general"
                              android:singleLine="true"
                              android:ellipsize="end">
                    </TextView>

                    <TextView android:id="@+id/repo_item_name"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_alignParentLeft="true"
                              android:layout_toLeftOf="@id/repo_item_date"
                              android:paddingRight="10dp"
                              android:textSize="18sp"
                              android:singleLine="true"
                              android:ellipsize="end">
                    </TextView>

                </RelativeLayout>

                <TextView android:id="@+id/repo_item_description"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="12sp"
                          android:singleLine="true"
                          android:ellipsize="end">
                </TextView>

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                    <TextView android:id="@+id/repo_item_owner"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_alignParentRight="true"
                              android:textSize="12sp"
                              android:textColor="@color/dark_general"
                              android:singleLine="true"
                              android:ellipsize="end">
                    </TextView>

                    <TextView android:id="@+id/repo_item_info"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_alignParentLeft="true"
                              android:layout_toLeftOf="@id/repo_item_owner"
                              android:paddingRight="10dp"
                              android:textSize="12sp"
                              android:textColor="@color/dark_general"
                              android:singleLine="true"
                              android:ellipsize="end">
                    </TextView>


                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

</RelativeLayout>